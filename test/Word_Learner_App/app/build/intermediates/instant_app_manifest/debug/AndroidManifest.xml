<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.flow.assignment1.wordlearnerapp"
    android:targetSandboxVersion="2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="29" />

    <!-- Creating an image asset https://www.youtube.com/watch?v=ts98gL1JCQU -->
    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/word_learner"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/word_learner_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.flow.assignment1.wordlearnerapp.EditActivity" />
        <activity android:name="com.flow.assignment1.wordlearnerapp.DetailsActivity" />
        <activity android:name="com.flow.assignment1.wordlearnerapp.ListActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>